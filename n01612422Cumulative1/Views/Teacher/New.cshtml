@{
    ViewBag.Title = "New";
}

<div class="container">
    <nav>
        <a class="link-primary" href="/Teacher/List">Back To Teachers</a>
    </nav>
    <h2>Create Teacher</h2>

    <form method="post" action="/Teacher/Create" onsubmit="return onSubmitNewTeacher()" >

        <div>
            <label for="fname">First Name:</label>
            <input type="text" id="fname" name="fname" class="form-control" required />
        </div>

        <div>
            <label for="lname">Last Name:</label>
            <input type="text" id="lname" name="lname" class="form-control" required />
        </div>

        <div>
            <label for="employeeNum">Employee Number:</label>
            <input type="text" id="employeeNum" name="employeeNum" class="form-control" required />
        </div>

        <div>
            <label for="hireDate">Hire Date:</label>
            <input type="date" id="hireDate" name="hireDate" class="form-control" required />
        </div>

        <div>
            <label for="salary">Salary:</label>
            <input type="number" step=".1" id="salary" name="salary" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary mt-1">Create Teacher</button>
    </form>
</div>
